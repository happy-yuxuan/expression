<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/menu_add_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:text="+86"
            android:textColor="#ff353535"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_write_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="请填写手机号码"
                android:inputType="phone"
                android:background="@drawable/eselector"
                android:textColor="#ff353535"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_identify_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/eselector"
            android:hint="请填写验证码"
            android:inputType="phone"
            android:textColor="#ff353535"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_get_identy_code"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该手机号已经验证"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="#ff0000"/>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="48dp"
        android:background="@drawable/selector"
        android:text="提交验证"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>